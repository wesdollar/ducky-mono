{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "target": "es6",
    "lib": ["esnext", "dom", "DOM.Iterable"],
    "module": "CommonJS",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts"],
  "watchOptions": {
    "excludeFiles": ["./jest.config.ts"],
    "excludeDirectories": [".vscode", ".yarn", "dist", "node_modules"]
  },
}
